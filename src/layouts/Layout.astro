---
import Header from "../components/Header.astro"

export interface Props {
  title: string
}

const { title } = Astro.props
export const pixelsToRem = (px: number, base = 16): string => {
  return (1 / base) * px + "rem"
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>

  <style is:global>
    :root {
      --accent: 104, 153, 190, 30;
      --accent-gradient: linear-gradient(45deg, rgba(var(--accent)), #648de034 30%, white 60%);
    }
    html,
    body {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      width: 100%;
      overflow-x: hidden;
      font-family: "Titillium Web";
      background: rgb(220, 229, 236);
      background: -moz-linear-gradient(
        20deg,
        rgba(220, 229, 236, 1) 31%,
        rgba(104, 153, 190, 1) 89%
      );
      background: -webkit-linear-gradient(
        20deg,
        rgba(220, 229, 236, 1) 31%,
        rgba(104, 153, 190, 1) 89%
      );
      background: linear-gradient(20deg, rgba(220, 229, 236, 1) 31%, rgba(104, 153, 190, 1) 89%);
      filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#dce5ec",endColorstr="#6899be",GradientType=1);
    }

    code {
      font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
        Bitstream Vera Sans Mono, Courier New, monospace;
    }
  </style>
</html>
